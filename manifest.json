// manifest.json
{
  "name": "Ma 1 ère extension : Lecteur de musique ",
  "version": "1.0",
  "description":
  "Version 1 : Cette extension permet d'écouter de la musique en arrière plan",
  "manifest_version": 2,
  "background": {
  "scripts": [
    "background.js"
    ]
  },

  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "images/image_musique.png"
  },
    "icons": {
    "16": "images/image_musique.png",
    "32": "images/image_musique.png",
    "48": "images/image_musique.png",
    "128": "images/image_musique.png"
  }
}
